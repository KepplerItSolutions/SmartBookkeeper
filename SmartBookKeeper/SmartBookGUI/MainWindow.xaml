<Window x:Class="SmartBookGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartBookGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="549.858" Width="918.562" WindowState="Maximized">
    <Grid>
        <TextBox x:Name="tbAccountFrom" HorizontalAlignment="Left" Height="23" Margin="10,393,0,0" TextWrapping="Wrap" Text="Rohstoffe" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbAmmount" Text="{Binding Path=AmmountToBook, StringFormat='C',UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="135,393,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbAccountTo" HorizontalAlignment="Left" Height="23" Margin="260,393,0,0" TextWrapping="Wrap" Text="Bank" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAckBooking" Content="Buchen" HorizontalAlignment="Left" Margin="512,393,0,0" VerticalAlignment="Top" Width="75" Click="btnAckBooking_Click"/>

    </Grid>
</Window>
